%h1 Listing schools

%table
  %thead
    %tr
      %th Name
      %th Phone
      %th Email
      %th Ownership
      %th Level
      %th Mode
      %th Gender
      %th About us

  %tbody
    - @schools.each do |school|
      %tr
        %td= school.name
        %td= school.phone
        %td= school.email
        %td= school.ownership
        %td= school.level
        %td= school.mode
        %td= school.gender
        %td= school.about
        %td= link_to 'Show', school
        %td= link_to 'Edit', edit_school_path(school)
        %td= link_to 'Destroy', school, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New School', new_school_path
