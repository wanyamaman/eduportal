- content_for :title do
  Schools

.schools
  %h1 Search for a school
  %br/
  .row
    .col-md-12
      = form_tag schools_path, method: "get", id: "school-search-form", class: "form-inline" do
        = select_tag :ownership, options_for_select(School.ownership_options), class: 'form-control search-location'
        = select_tag :level, options_for_select(School.level_options), class: 'form-control search-location'
        = select_tag :mode, options_for_select(School.mode_options), class: 'form-control search-location'
        = select_tag :gender, options_for_select(School.gender_options), class: 'form-control search-location'
        = submit_tag "Search", name: nil, class: "btn btn-brand-primary text-center search-submit"
  %br/
  - if current_user.try(:editor?)
    .row
      .col-md-8
        = link_to 'Add New School', new_school_path, class: "btn btn-brand-primary"
    %br/
  .row
    .col-md-12
      %p
        %em.text-muted Search Results
  .row
    .col-md-9
      - @schools.each do |school|
        .index-card
          %h4
            = school.name
          %hr/
          .row
            .col-md-4
              = link_to cl_image_tag(school.logo_url ? school.logo_url : "edu-logo-red_ulebsf.png", width: "60%", alt: "#{school.name} logo"), school
            .col-md-8
              %p.text-xs-justify
                = truncate(school.about, length: 400)
          .row
            .col-md-12
              %p
                - if user_signed_in?
                  - if current_user.try(:editor?)
                    = link_to "Edit School", edit_school_path(school), class: "btn btn-brand-secondary pull-right js-block-sm"
                  - if current_user.try(:admin?)
                    = link_to "Delete School", school, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-brand-primary pull-right js-block-sm"
                = link_to "View School Profile", school, class: "btn btn-brand-orange pull-right js-block-sm"

  %br
