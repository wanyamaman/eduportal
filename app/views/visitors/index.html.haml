/ Image Background Page Header
#carousel-home.banner.carousel.slide{ 'data-ride' => 'carousel' }
  %ol.carousel-indicators
    %li.active{ 'data-target' => '#carousel-home', 'data-slide-to' => "0" }
    %li{ 'data-target' => '#carousel-home', 'data-slide-to' => "1" }
    %li{ 'data-target' => '#carousel-home', 'data-slide-to' => "2" }
    %li{ 'data-target' => '#carousel-home', 'data-slide-to' => "3" }

  .carousel-inner{ 'role' => 'listbox' }
    .item.active
      = image_tag 'home/slider/MAIN-SLIDER-1.jpg', alt: 'Call to action to join Eduportal'
    .item
      = image_tag 'home/slider/MAIN-SLIDER-2.jpg', alt: 'Student with laptop'
    .item
      = image_tag 'home/slider/MAIN-SLIDER-3.jpg', alt: 'Services available on Eduportal'
    .item
      = image_tag 'home/slider/MAIN-SLIDER-4.jpg', alt: 'Student with tablet'

  %a{ href: '#carousel-home', role: 'button', 'data-slide' => 'prev', class: 'left carousel-control' }
    %span.glyphicon.glyphicon-chevron-left{ 'aria-hidden' => 'true' }
    %span.sr-only Previous
  %a{ href: '#carousel-home', role: 'button', 'data-slide' => 'next', class: 'right carousel-control' }
    %span.glyphicon.glyphicon-chevron-right{ 'aria-hidden' => 'true' }
    %span.sr-only Next

